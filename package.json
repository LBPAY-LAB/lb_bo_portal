{
  "name": "lb-bo-portal",
  "version": "0.1.0",
  "description": "Portal BackOffice LBPay - PayloadCMS 3.x + Next.js 15",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--no-deprecation' next dev",
    "build": "cross-env NODE_OPTIONS='--no-deprecation' next build",
    "start": "cross-env NODE_OPTIONS='--no-deprecation' next start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "generate:types": "payload generate:types",
    "payload": "payload",
    "prepare": "husky install",
    "clean": "rm -rf .next out dist",
    "validate": "npm run typecheck && npm run lint && npm run format:check"
  },
  "dependencies": {
    "payload": "^3.0.0",
    "@payloadcms/db-postgres": "^3.0.0",
    "@payloadcms/next": "^3.0.0",
    "@payloadcms/richtext-slate": "^3.0.0",
    "@payloadcms/storage-s3": "^3.0.0",
    "@payloadcms/plugin-cloud-storage": "^3.0.0",
    "next": "15.4.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "drizzle-orm": "^0.36.4",
    "pg": "^8.11.0",
    "dotenv": "^16.4.0",
    "cross-env": "^7.0.3",
    "sharp": "^0.33.0",
    "graphql": "^16.8.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.5.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.4.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "typescript": "5.7.3",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "payload-cms",
    "nextjs",
    "typescript",
    "backoffice",
    "pix",
    "dict"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LBPAY-LAB/LB_BackOffice"
  },
  "author": "LBPay",
  "license": "PRIVATE"
}
